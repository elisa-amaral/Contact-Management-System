<%- include('./includes/head') %>
<%- include('./includes/nav') %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>
        
        <div class="col-lg-8 my-4">
            <h1 class="text-center">Log In | Sign Up</h1>
            <p class="text-center lead">Access your account or create one below</p>

            <%- include('./includes/messages') %>
            
            <!-- Log In | Sign Up-->
            <div class="row">
                <!-- Log In -->
                <div class="col-lg my-4">
                    <h4 class="mb-4">Log in to your account</h4>
                    <form action="/authentication/login" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <div class="form-group">
                          <label class="font-weight-bold">Email address</label>
                          <input type="email" class="form-control" name="email">
                        </div>
                        <div class="form-group">
                          <label class="font-weight-bold">Password</label>
                          <input type="password" class="form-control" name="password">
                        </div>
                        <button type="submit" class="btn btn-primary font-weight-bold">Log In</button>
                    </form>
                </div>
                
                <!-- Sign Up-->
                <div class="col-lg my-4">
                    <h4 class="mb-4">New here? Join today!</h4>
                    <form action="/authentication/signup" method="post">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <div class="form-group">
                          <label class="font-weight-bold">Email address</label>
                          <input type="email" class="form-control" name="email">
                        </div>
                        <div class="form-group">
                          <label class="font-weight-bold">Password</label>
                          <input type="password" class="form-control" name="password">
                        </div>
                        <button type="submit" class="btn btn-primary font-weight-bold">Sign Up</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-2"></div>
    </div>
</div>

<%- include('./includes/footer') %>