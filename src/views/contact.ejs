<%- include('./includes/head') %>
<%- include('./includes/nav') %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>
        
        <div class="col-lg-8 my-4">
            <%- include('includes/messages')%>
            
            <% if(contact._id) { %>
              <form action="/contact/edit/<%= contact._id %>" class="mt-3" method="POST">
            <% } else { %> 
              <form action="/contact/add" class="mt-3" method="POST">
            <% } %> 
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="form-group font-weight-bold">
                  <label>First Name</label>
                  <input value="<%= contact.firstName %>" type="text" class="form-control" name="firstName">
                </div>
                <div class="form-group font-weight-bold">
                  <label>Last Name</label>
                  <input value="<%= contact.lastName %>" type="text" class="form-control" name="lastName">
                </div>
                <div class="form-group font-weight-bold">
                  <label>Phone Number</label>
                  <input value="<%= contact.phoneNumber %>" type="tel" class="form-control" name="phoneNumber">
                </div>
                <div class="form-group font-weight-bold">
                  <label>Email address</label>
                  <input value="<%= contact.email %>" type="email" class="form-control" name="email">
                </div>
                <% if(contact._id) { %>
                  <button type="submit" class="btn btn-primary font-weight-bold">Update Contact</button>
                <% } else { %> 
                  <button type="submit" class="btn btn-primary font-weight-bold">Add New Contact</button>
                <% } %> 
               
              </form>
        </div>

        <div class="col-lg-2"></div>
    </div>
</div>

<%- include('./includes/footer') %>